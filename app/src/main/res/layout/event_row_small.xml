<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card_main"
                                   style="@style/DefaultCardStyle"
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="60dp">

    <LinearLayout
        style="@style/AlmostWhiteBackground"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/month_small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:textColor="@color/colorAccent"
                tools:text="Nov"/>

            <TextView
                android:id="@+id/day_small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/card_margin"
                android:textSize="22sp"
                tools:text="23"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="@dimen/card_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/small_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="end"
                android:singleLine="true"
                android:textStyle="bold"
                tools:text="HerrÃ¤ng Dance Camp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/small_event_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:text="Stockholm, Sweden"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/small_country_flag"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/card_margin"
                    android:layout_marginTop="2dp"
                    tools:src="@drawable/se"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>