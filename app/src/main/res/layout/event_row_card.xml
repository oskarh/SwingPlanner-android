<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_main"
                                    style="@style/DefaultCardStyle"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/card_event_image"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="190dp"
                tools:src="@drawable/snowball"/>

            <TextView
                android:id="@+id/card_event_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/card_event_image"
                android:background="#80000000"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/white"
                tools:text="HerrÃ¤ng Dance Camp"/>
        </RelativeLayout>

        <LinearLayout
            style="@style/AlmostWhiteBackground"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/month_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/card_margin"
                    android:textColor="@color/colorAccent"
                    tools:text="Nov"/>

                <TextView
                    android:id="@+id/day_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/card_margin"
                    android:textSize="22sp"
                    tools:text="23"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="@dimen/card_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_event_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    tools:text="Stockholm"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/card_event_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        tools:text="Sweden"/>

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/card_country_flag"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/card_margin"
                        android:layout_marginTop="2dp"
                        tools:src="@drawable/se"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
